#include <stdio.h>
#include <ctype.h>
#include <string.h> // Required for strlen()

// Function to compute gcd
int gcd(int a, int b) {
    while (b != 0) {
        int temp = b;
        b = a % b;
        a = temp;
    }
    return a;
}

// Function for affine cipher encryption
char affineEncrypt(char ch, int a, int b) {
    if (isalpha(ch)) {
        int isLower = islower(ch);
        ch = toupper(ch);
        int p = ch - 'A'; // plaintext number
        int c = (a * p + b) % 26; // ciphertext number
        char res = c + 'A';
        return isLower ? tolower(res) : res;
    }
    return ch; // Non-alphabetic unchanged
}

int main() {
    char plaintext[100], ciphertext[100];
    int a, b;

    printf("Enter plaintext: ");
    fgets(plaintext, sizeof(plaintext), stdin);

    // Remove newline added by fgets
    plaintext[strcspn(plaintext, "\n")] = '\0';

    printf("Enter key values (a and b): ");
    scanf("%d %d", &a, &b);

    // Check if 'a' is valid (must be coprime to 26)
    if (gcd(a, 26) != 1) {
        printf("Invalid key 'a'. It must be coprime with 26.\n");
        return 1;
    }

    // Encryption
    int i;
    for (i = 0; plaintext[i] != '\0'; i++) {
        ciphertext[i] = affineEncrypt(plaintext[i], a, b);
    }
    ciphertext[i] = '\0'; // Proper null termination

    printf("Encrypted Ciphertext: %s\n", ciphertext);

    return 0;
}

