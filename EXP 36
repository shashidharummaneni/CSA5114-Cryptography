#include <stdio.h>
#include <string.h>
#include <ctype.h>

// Function to compute gcd
int gcd(int a, int b) {
    while (b != 0) {
        int t = b;
        b = a % b;
        a = t;
    }
    return a;
}

// Function to check if 'a' is valid for one-to-one mapping
int is_valid_key(int a) {
    return gcd(a, 26) == 1;
}

// Encryption: C = (a * p + b) mod 26
char encrypt(char p, int a, int b) {
    if (isalpha(p)) {
        int p_numeric = toupper(p) - 'A';
        int c_numeric = (a * p_numeric + b) % 26;
        return c_numeric + 'A';
    }
    return p;
}

// Decryption: p = a_inv * (c - b) mod 26
char decrypt(char c, int a, int b) {
    int a_inv = -1;
    for (int i = 0; i < 26; i++) {
        if ((a * i) % 26 == 1) {
            a_inv = i;
            break;
        }
    }
    
    if (a_inv == -1) {
        printf("Error: No modular inverse exists for 'a'.\n");
        return c;
    }

    if (isalpha(c)) {
        int c_numeric = toupper(c) - 'A';
        int p_numeric = (a_inv * (c_numeric - b + 26)) % 26;
        return p_numeric + 'A';
    }
    return c;
}

int main() {
    char plaintext[100], ciphertext[100], decrypted[100];
    int a, b;

    printf("Enter key values a and b (integers): ");
    scanf("%d %d", &a, &b);

    if (!is_valid_key(a)) {
        printf("Error: Key 'a' is not valid. The cipher will not be one-to-one.\n");
        printf("Valid values for 'a' are those that are coprime to 26.\n");
        return 1;
    }

    printf("Enter plaintext (A-Z only): ");
    scanf(" %[^\n]%*c", plaintext);

    int len = strlen(plaintext);

    for (int i = 0; i < len; i++) {
        ciphertext[i] = encrypt(plaintext[i], a, b);
    }
    ciphertext[len] = '\0';

    printf("Encrypted text: %s\n", ciphertext);

    for (int i = 0; i < len; i++) {
        decrypted[i] = decrypt(ciphertext[i], a, b);
    }
    decrypted[len] = '\0';

    printf("Decrypted text: %s\n", decrypted);

    return 0;
}
