#include <stdio.h>
#include <stdint.h>

// Permutation tables, S-box, and shift schedule
int IP[64] = { 
    58, 50, 42, 34, 26, 18, 10, 2,
    60, 52, 44, 36, 28, 20, 12, 4,
    62, 54, 46, 38, 30, 22, 14, 6,
    64, 56, 48, 40, 32, 24, 16, 8,
    57, 49, 41, 33, 25, 17,  9, 1,
    59, 51, 43, 35, 27, 19, 11, 3,
    61, 53, 45, 37, 29, 21, 13, 5,
    63, 55, 47, 39, 31, 23, 15, 7 
};

int FP[64] = {
    40, 8, 48, 16, 56, 24, 64, 32,
    39, 7, 47, 15, 55, 23, 63, 31,
    38, 6, 46, 14, 54, 22, 62, 30,
    37, 5, 45, 13, 53, 21, 61, 29,
    36, 4, 44, 12, 52, 20, 60, 28,
    35, 3, 43, 11, 51, 19, 59, 27,
    34, 2, 42, 10, 50, 18, 58, 26,
    33, 1, 41,  9, 49, 17, 57, 25
};

int E[48] = {
    32,  1,  2,  3,  4,  5,
     4,  5,  6,  7,  8,  9,
     8,  9, 10, 11, 12, 13,
    12, 13, 14, 15, 16, 17,
    16, 17, 18, 19, 20, 21,
    20, 21, 22, 23, 24, 25,
    24, 25, 26, 27, 28, 29,
    28, 29, 30, 31, 32,  1
};

int P[32] = {
    16,  7, 20, 21, 29, 12, 28, 17,
     1, 15, 23, 26,  5, 18, 31, 10,
     2,  8, 24, 14, 32, 27,  3,  9,
    19, 13, 30,  6, 22, 11,  4, 25
};

int leftShifts[16] = {1, 1, 2, 2, 2, 2, 2, 2, 1, 2, 2, 2, 2, 2, 2, 1};

// S-box definitions omitted for brevity (include all 8 S-boxes in practice)...

// Utility for permutation
uint64_t permute(uint64_t input, int *table, int tableSize, int inputSize) {
    uint64_t output = 0;
    for (int i = 0; i < tableSize; i++) {
        output <<= 1;
        output |= (input >> (inputSize - table[i])) & 1;
    }
    return output;
}

// Simple left rotation for key schedule
uint32_t leftRotate28(uint32_t x, int shifts) {
    return ((x << shifts) | (x >> (28 - shifts))) & 0x0FFFFFFF;
}

void generateKeys(uint64_t key, uint64_t subkeys[16]) {
    uint64_t key56 = permute(key, PC1, 56, 64);
    uint32_t C = (key56 >> 28) & 0x0FFFFFFF;
    uint32_t D = key56 & 0x0FFFFFFF;

    for (int i = 0; i < 16; i++) {
        C = leftRotate28(C, leftShifts[i]);
        D = leftRotate28(D, leftShifts[i]);
        subkeys[i] = permute(((uint64_t)C << 28) | D, PC2, 48, 56);
    }

    // Reverse subkeys for decryption process
    for (int i = 0; i < 8; i++) {
        uint64_t temp = subkeys[i];
        subkeys[i] = subkeys[15 - i];
        subkeys[15 - i] = temp;
    }
}

uint32_t Feistel(uint32_t R, uint64_t subkey) {
    uint64_t ER = permute(R, E, 48, 32);
    uint64_t sInput = ER ^ subkey;

    // S-box and P-box omitted for brevity; assume Feistel uses stub logic:
    return (sInput & 0xFFFFFFFF);  // Placeholder
}

uint64_t decrypt(uint64_t ciphertext, uint64_t key) {
    uint64_t subkeys[16];
    generateKeys(key, subkeys);  // Key generation with reversal

    uint64_t data = permute(ciphertext, IP, 64, 64);
    uint32_t L = (data >> 32) & 0xFFFFFFFF;
    uint32_t R = data & 0xFFFFFFFF;

    for (int i = 0; i < 16; i++) {
        uint32_t temp = R;
        R = L ^ Feistel(R, subkeys[i]);
        L = temp;
    }

    uint64_t preoutput = ((uint64_t)R << 32) | L;
    return permute(preoutput, FP, 64, 64);
}

int main() {
    uint64_t key = 0x133457799BBCDFF1;         // Example 64-bit key
    uint64_t ciphertext = 0x85E813540F0AB405;  // Example ciphertext

    uint64_t plaintext = decrypt(ciphertext, key);
    printf("Decrypted plaintext: %016llX\n", plaintext);

    return 0;
}
